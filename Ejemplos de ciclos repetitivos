//Invertir numero
 
#include "stdafx.h"
#include <iostream>
#include "conio.h"
 
using namespace std;
 
void main(){
int n,r,s=0;
cout<<"Ingrese el numero a invertir : ";
cin>>n;
 
while(n>0){
r=n%10;
s=(s*10)+r;
n=n/10;
}
cout<<"El numero invertido es"<<s;
getch();
}
