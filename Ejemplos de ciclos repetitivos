       #include "stdafx.h"
#include <iostream>
#include "conio.h"
 
using namespace std;
 
void main(){
       int n,s=0,d;
      
       cout << "introducir numero : ";
    cin >> n;
 
      
       for(int i=0;n>0;i++){
              d=n%10;
              s=s+d;
              n=n/10;
       }
       cout<<"la suma de los digitos es"<<s;
 
       getch();
}
 
 
