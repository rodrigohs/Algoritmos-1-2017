	   if((Registro.estado.at(0)=='A')&& Registro.codUsuario== cod_usuario){
  cout<<Registro.nro_situacion<<"      "<<Registro.codUsuario<<"    "<<Registro.situacion<<"     "<<Registro.nivel<<endl;
